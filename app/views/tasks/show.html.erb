<h1><%=@task.name%></h1>

<ul>
  <li>Completed: <%=@task.completion_date%></li>
  <li><article>Description: <%=@task.description%></article></li>
</ul>

<p>
  <ul>
    <li>
      <%= button_to "Edit Task", edit_task_path,
      method: :get, data: { confirm: "Are you sure?" } %>
    </li>
    <li>
      <%= button_to "Delete Task", task_path(@task.id),
      method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
    <li>
      <%= button_to "Complete Task", task_path(@task.id),
      method: :post, data: { confirm: "Are you sure?" } %>
    </li>

  </ul>
</p>
