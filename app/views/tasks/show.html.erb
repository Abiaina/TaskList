<h1><%=@task.name%></h1>

<ul class="details">
  <li>Completed: <%=@task.complete%></li>
  <li><article>Description: <%=@task.description%></article></li>
</ul>

<ul class="task_details">
  <li>
    <%= button_to "Edit Task", edit_task_path,
    method: :get, data: { confirm: "Are you sure?" } %>
  </li>
  <li>
    <%= button_to "Delete Task", task_path(@task.id),
    method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <li>
    <%= button_to (@task.complete.nil?) ? "Complete Task" : "Uncomplete Task", complete_task_path(@task.id),
    method: :patch, data: { confirm: "Are you sure?" } %>
  </li>

</ul>
